# Server Configuration
PORT=3001
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Kinesis Configuration
KINESIS_STREAM_NAME=resources-stream
ELIXIR_STREAM_NAME=elixir-notifications
KINESIS_CONSUMER_STREAM_NAME=resources-consumer-stream

# Database Configuration
# Options: 'citrus' or 'rds'
DATABASE_TYPE=rds

# RDS Configuration (when DATABASE_TYPE=rds)
RDS_HOST=localhost
RDS_PORT=5432
RDS_USERNAME=postgres
RDS_PASSWORD=your_password
RDS_DATABASE=resources_db
RDS_SSL=false
RDS_SYNCHRONIZE=false
RDS_LOGGING=false

# Citrus Sharding Configuration (when DATABASE_TYPE=citrus)
CITRUS_SERVER_URL=http://localhost:8080
CITRUS_API_KEY=your_citrus_api_key
CITRUS_TIMEOUT=5000
CITRUS_RETRY_ATTEMPTS=3

# Elixir Service Configuration
ELIXIR_URL=http://elixir:4000

# Validation Configuration
VALIDATION_ENABLED=true