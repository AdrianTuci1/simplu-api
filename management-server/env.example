# Server Configuration
PORT=3001
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=business-info

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_DENTAL_PRICE_ID=price_dental_monthly
STRIPE_GYM_PRICE_ID=price_gym_monthly
STRIPE_HOTEL_PRICE_ID=price_hotel_monthly

# Domain Configuration
BASE_DOMAIN=example.com

# CloudFormation Configuration
CLOUDFORMATION_STACK_PREFIX=react-app-

# SQS Configuration for Shard Creation Notifications
# Create this queue manually or through your infrastructure management process
SQS_SHARD_CREATION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/shard-creation-queue

# Email (SES)
SES_SENDER_EMAIL=no-reply@simplu.ro

# Frontend base URL for activation links
FRONTEND_BASE_URL=https://app.simplu.ro


# Cognito Configuration
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h 