########################################
# Management Server - .env example
########################################

# Server
PORT=3001
NODE_ENV=development

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
EVENT_BRIDGE_BUS_NAME=simplu-bus

# DynamoDB tables
# Business table used by DatabaseService (key: businessId)
DYNAMODB_TABLE_NAME=business-info
# Users profile + stripe mapping (key: userId)
DYNAMODB_USERS_TABLE_NAME=users
# Business subscriptions mapping (key: pk = business#<businessId>)
DYNAMODB_SUBSCRIPTIONS_TABLE_NAME=business-subscriptions

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Product IDs pentru planuri (obligatoriu pentru func»õionalitatea de planuri dinamice)
STRIPE_BASIC_PRODUCT_ID=
STRIPE_PREMIUM_PRODUCT_ID=


# Domains and Infra
BASE_DOMAIN=example.com
CLOUDFORMATION_STACK_PREFIX=react-app-

# SQS for shard creation events
SQS_SHARD_CREATION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/shard-creation-queue

# Email (SES)
SES_SENDER_EMAIL=no-reply@simplu.ro

# Frontend base URL for activation links
FRONTEND_BASE_URL=https://app.simplu.ro

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT (if used locally by dev helpers)
JWT_SECRET=local_dev_secret
JWT_EXPIRES_IN=1h

# Business Launch Secret Code (for launching businesses without user authentication)
BUSINESS_LAUNCH_SECRET_CODE=LAUNCH_SECRET_2024


